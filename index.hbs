<!DOCTYPE html>
<html>
<head>
  {{{styles}}}
  <script type="text/javascript" src="//use.typekit.net/hxp5yev.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
</head>
<body {{{bodyClasses}}}>
  <div class="wrapper">
    <div class="signature">
      <img class="arrow" src="./images/arrow.png">
      {{#if avatar}}
        <div class="avatar-wrapper">
          <span class="avatar" style="background-image: url({{{avatar}}})"></span>
          <img class="outline" src="./images/avatar-outline.png">
        </div>
      {{/if}}
    </div>
    <div class="info">
      <span class="name">{{{first}}} {{{last}}}</span>
      <div class="spacer">.</div>
      <span class="location">
        {{{city}}}
        {{#if state}}{{#if city}}, {{/if}}{{/if}}
        {{#if city}}{{state}}{{else}}{{state_full}}{{/if}}
      </span>
    </div>
  </div>
  {{{scripts}}}
</body>
</html>
